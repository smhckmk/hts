@model IEnumerable<hts.Entity.YakinTb>
@{
    ViewBag.Title = "YakinAnasayfa";
    Layout = "~/Views/Shared/HastaneLayout.cshtml";
}

<h2>YakinAnasayfa</h2>

<p>
    @Html.ActionLink("yeni ekle", "YakinOlusturma")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.doktorTb.adSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HastaTbhastaTc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.doktorTb.adSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HastaTbhastaTc)
            </td>
            <td>
                @Html.ActionLink("duzenle", "YakinDuzenleme", new { id = item.yakinTc }) |
                @Html.ActionLink("sil", "YakinSilme", new { id = item.yakinTc })
            </td>
        </tr>
    }

</table>
