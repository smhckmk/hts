@model IEnumerable<hts.Models.HomeAnasayfa>
@{
    ViewBag.Title = "Anasayfa";
    
}
<div class="row">
    <div class="col-md-3">
        <br />
        <div class="card border-success mb-3" style="max-width: 18rem;">
            <div class="card-header">Haberler</div>
            <div class="card-body text-success">
                <h5 class="card-title">Dünya Sağlık Örgütü</h5>
                <p class="card-text">Dünya nüfusundaki artış ve buna bağlı olarak doğal yöntemlerden...</p>
            </div>
            <div class="card-body text-success">
                <h5 class="card-title">Bu besinler saç dökülmesini önlüyor</h5>
                <p class="card-text">Özellikle protein, demir ve diğer besin öğelerinden oluşan ...</p>
            </div>
            <div class="card-body text-success">
                <h5 class="card-title">Bu Kanser türleri tarih oluyor</h5>
                <p class="card-text">Vücudun kendi bağışıklık hücrelerinin kanser tedavisinde kullanılabilmesi... </p>
            </div>
        </div>

    </div>

    <div class="col-md-6">
        <br />
        <div id="slider3" class="carousel slide carousel-fade">
            <ol class="carousel-indicators">
                <li data-target="#slider3" data-slide-to="0" class="active"></li>
                <li data-target="#slider3" data-slide-to="1"></li>
                <li data-target="#slider3" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active sliderx">
                    <img class="d-block w-100 imagex" src="~/bitirme/img/hastanee.jpg" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><b> Hasta Takip Sistemi</b></h5>
                        <p></p>
                    </div>
                </div>
                <div class="carousel-item sliderx">
                    <img class="d-block w-100 imagex" src="~/bitirme/img/uzmanekip.jpg" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><b> Uzman Doktorlar</b></h5>
                        <p></p>
                    </div>
                </div>
                <div class="carousel-item sliderx">
                    <img class="d-block w-100 imagex" src="~/bitirme/img/hastatakip.jpg" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><b>Hasta İle Anlık Haberleşme</b></h5>
                        <p></p>
                    </div>
                </div>
            </div>
            <a href="#slider3" class="carousel-control-prev" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a href="#slider3" class="carousel-control-next" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <br />
        <div class="card border-success mb-3" style="max-width: 18rem;">
            <div class="card-header">Duyurular</div>
            <div class="card-body text-success">
                <h5 class="card-title">Sağlık Sektöründe Teknoloji ve İletişim</h5>
                <p class="card-text">Yaşam için hayati unsurlar arasında teknoloji ve iletişim yer alıyor.</p>
            </div>
            <div class="card-body text-success">
                <h5 class="card-title">Uzaktan teşhis</h5>
                <p class="card-text">Evde tek başına kalan yaşlılar veya kronik hastalara müdahale edebilmek gerektiğinde doktorlar, uzaktan hasta takip sistemleri</p>
            </div>
            <div class="card-body text-success">
                <h5 class="card-title">İleri Sağlık Teknolojileri</h5>
                <p class="card-text">Sağlık hizmetleri 2030'a kadar tamamen dijitalleşecek.</p>
            </div>
        </div>

    </div>
</div>
   

<hr />
<center><p><b>HAKKIMIZDA</b></p></center>
@foreach (var i in Model)
{

    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                <div class="card-header">Misyonumuz</div>
                <div class="card-body">
                   <br />
                    <p>@i.misyon</p>
                    <br />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                <div class="card-header">Şubelerimiz</div>
                <div class="card-body">
                   <br />
                    <p>@i.subeler</p>
                    <br />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                <div class="card-header">Hizmetler</div>
                <div class="card-body">
                    <br />
                    <p>@i.hizmetler</p>
                    <br />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3" style="max-width: 18rem; ">
                <div class="card-header">iletişim</div>
                <div class="card-body">
                   <br />                  
                    <p>@i.iletisim</p>
                    <br />
                </div>
            </div>
        </div>

    </div>
}

