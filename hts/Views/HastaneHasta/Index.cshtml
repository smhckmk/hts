@model IEnumerable<hts.Entity.HastaTb>

@{
    ViewBag.Title = "Index";
}


<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" style="color: black" href="#">Anasayfa</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <a class="sag">Hastane Bilgi Sistemi</a>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Ara</button>
        </form>
    </div>
</nav>
<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action">Doktor İşlemleri</a>
            <a href="#" class="list-group-item list-group-item-action">HastaDurum İşlemleri</a>
            <a href="/HastaneHasta/Index" class="list-group-item list-group-item-action">Hasta İşlemleri</a>
            <a href="#" class="list-group-item list-group-item-action">Yakın İşlemleri</a>
        </div>
    </div>

    <div class="col-md-8">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>

                <th>
                    Hasta Adı
                </th>
                <th>
                    Doktor Adı
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.adres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.hastaligi)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.adSoyad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doktorTb.adSoyad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.adres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hastaligi)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.hastaTc }) |
                        @Html.ActionLink("Details", "Details", new { id = item.hastaTc }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.hastaTc })
                    </td>
                </tr>
            }

        </table>


    </div>
</div>
