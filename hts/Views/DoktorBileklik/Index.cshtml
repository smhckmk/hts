@model IEnumerable<hts.Entity.BileklikTb>

@{
    ViewBag.Title = "Index";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <img src="~/bitirme/img/avatar.png" alt="" class="rounded-circle" style="height:150px;">
        </div>
        <div class="col-md-9">
            <h3>adsoyad</h3>
            <label>uzmanlık</label>
        </div>
    </div>
    <div class="mt-3">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.hastaTb.adSoyad)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.verilebilmeDurumu)
                    </th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
               
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.hastaTb.adSoyad)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.verilebilmeDurumu)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


