@model IEnumerable<hts.Entity.HastaneTb>
@{
    ViewBag.Title = "HastaneAnasayfa";
    Layout = "~/Views/Shared/KurumLayout.cshtml";
}

<h2>HastaneAnasayfa</h2>


<p>
    @Html.ActionLink("yeni ekle", "HastaneOlusturma")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kurumTb.kurumAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hastaneAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stoktakiBileklik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adres)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kurumTb.kurumAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hastaneAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stoktakiBileklik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adres)
            </td>
            <td>
                @Html.ActionLink("duzenle", "HastaneDuzenle", new { id = item.hastaneId }) |
                @Html.ActionLink("sil", "HastaneSilme", new { id = item.hastaneId })
            </td>
        </tr>
    }

</table>

