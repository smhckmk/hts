@model hts.Models.DoktorYakinHastaDoktorMesaj
@{
    ViewBag.Title = "GelenKutusu";
    Layout = "~/Views/Shared/DoktorLayout.cshtml";
}

<h2>GelenKutusu</h2>

<table class="table table-striped" style="color:darkcyan">
    <thead>
        <tr>
            <th>
                Yakin Adı
            </th>
            <th>
                Hasta Adı
            </th>
            <th>
                Mesaj
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var mesaj in Model.mesajlar)
        {

            foreach (var yakin in Model.yakinlar)
            {
                foreach (var hasta in Model.hastalar)
                {
                    foreach (var doktor in Model.doktorlar)
                    {
                        if (mesaj.YakinTbyakinTc == yakin.yakinTc && yakin.HastaTbhastaTc == hasta.hastaTc && hasta.DoktorTbdoktorTc == doktor.doktorTc)
                        {

                            <tr>
                                <td>
                                    @yakin.adSoyad
                                </td>
                                <td>
                                    @hasta.adSoyad
                                </td>
                                <td>
                                    @mesaj.mesaj
                                </td>
                                <td>

                                    @Html.ActionLink("Cevapla", "GelenMesajiYaz", new { yakinTc = yakin.yakinTc, doktorTc = doktor.doktorTc }, new { @class = "btn btn-warning btn-xs" })
                                </td>
                            </tr>
                        }
                    }
                }
            }
        }
 


    </tbody>
</table>

