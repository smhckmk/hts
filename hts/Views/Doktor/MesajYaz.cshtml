@model hts.Entity.DoktorMesajTb
@{
    ViewBag.Title = "MesajYaz";
    Layout = "~/Views/Shared/DoktorLayout.cshtml";
}

<h2>MesajYaz</h2>
<h3>Alıcı: @ViewBag.adSoyad</h3>

@using (Html.BeginForm("MesajYaz", "Doktor"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Mesaj", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("mesaaj", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mesaj, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div style="margin-left:40px;">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
