
@{
    ViewBag.Title = "DoktorGiris";
    Layout = "/Views/Shared/Girislayout.cshtml";
}


<h3 class="text-center text-white pt-5">Doktor Giris</h3>
<div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
            <div id="login-box" class="col-md-12">
                <form id="login-form" class="form" action="" method="POST">
                    <h3 class="text-center text-info">Giris</h3>
                    @using (Html.BeginForm("DoktorGiris", "Doktor", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="username" class="text-info">Username:</label><br>
                            <input type="text" name="kullaniciAdi" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Password:</label><br>
                            <input type="password" name="sifre" id="password" class="form-control">
                        </div>
                        <div class="form-group">

                            <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                        </div>
                        @ViewBag.mesaj
                    }
                </form>
            </div>
        </div>
    </div>
</div>
